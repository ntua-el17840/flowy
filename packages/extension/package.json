{
  "name": "@flowy/flowy-extension",
  "displayName": "Flowy",
  "version": "0.0.1",
  "description": "A powerful browser extension for quick web searches and tool access with type-ahead suggestions.",
  "author": "Plasmo Corp. <foss@plasmo.com>",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "vitest",
    "test:e2e": "playwright test",
    "test:coverage": "vitest run --coverage",
    "measure:hmr": "node scripts/measure-hmr.js"
  },
  "dependencies": {
    "dexie": "^4.0.11",
    "fuse.js": "^7.1.0",
    "hotkeys-js": "^3.13.10",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@playwright/test": "^1.52.0",
    "@tailwindcss/postcss7-compat": "^2.2.17",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/chrome": "0.0.258",
    "@types/dexie": "^1.3.35",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "^10.0.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.0.0",
    "prettier": "3.2.4",
    "tailwindcss": "^4.1.8",
    "typescript": "5.3.3",
    "vitest": "^3.2.1"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*",
      "https://clients1.google.com/*",
      "https://ac.duckduckgo.com/*",
      "https://api.bing.com/*"
    ],
    "permissions": [
      "activeTab",
      "storage",
      "tabs"
    ],
    "commands": {
      "open-web-search": {
        "suggested_key": {
          "default": "Ctrl+Space"
        },
        "description": "Open web search palette"
      },
      "open-tool-finder": {
        "suggested_key": {
          "default": "Ctrl+Shift+Space"
        },
        "description": "Open tool finder palette"
      }
    }
  }
}
