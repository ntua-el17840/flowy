{
  "name": "flowy",
  "private": true,
  "version": "1.0.0",
  "description": "Flowy - Browser Extension, Web App, and Desktop App",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:extension": "pnpm --filter @flowy/extension dev",
    "dev:web": "pnpm --filter @flowy/web dev",
    "build:extension": "pnpm --filter @flowy/extension build",
    "build:web": "pnpm --filter @flowy/web build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format"
  },
  "packageManager": "pnpm@10.11.1",
  "author": "sotaravant",
  "license": "MIT"
} 